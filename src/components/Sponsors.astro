<style>
	.sponsors-section {
		width: 100%;
		padding: 3rem 2rem;
		position: relative;
		overflow: hidden;
	}

	.sponsors-section::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		pointer-events: none;
	}

	.sponsors-container {
		overflow: hidden;
		mask-image: linear-gradient(
			to right,
			transparent 0%,
			black 8%,
			black 92%,
			transparent 100%
		);
		-webkit-mask-image: linear-gradient(
			to right,
			transparent 0%,
			black 8%,
			black 92%,
			transparent 100%
		);
	}

	.sponsors-track {
		display: flex;
		gap: 1rem;
		animation: scroll-sponsors 35s linear infinite;
		width: min-content;
	}

	@keyframes scroll-sponsors {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(-50%);
		}
	}

	.sponsors-container:hover .sponsors-track {
		animation-play-state: paused;
	}

	.sponsor-item {
		flex-shrink: 0;
		display: flex;
		align-items: center;
		justify-content: center;
		min-width: max-content;
	}

	.sponsor-card {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.875rem 1.5rem;
		border-radius: 0.5rem;
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
		transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
		white-space: nowrap;
		position: relative;
		overflow: hidden;
	}

	.sponsor-card::before {
		content: '';
		position: absolute;
		inset: 0;
		background: linear-gradient(
			135deg,
			rgba(19, 127, 236, 0.2) 0%,
			transparent 100%
		);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.sponsor-item:hover .sponsor-card {
		background: rgba(19, 127, 236, 0.15);
		transform: translateY(-6px) scale(1.05);
	}

	.sponsor-item:hover .sponsor-card::before {
		opacity: 1;
	}

	.sponsor-logo {
		font-size: 3rem;
		display: inline-block;
		position: relative;
		z-index: 1;
		transition: transform 0.5s ease;
	}

	.sponsor-item:hover .sponsor-logo {
		transform: scale(1.2) rotate(-5deg);
	}

	.sponsor-card::after {
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
	}

	/* Responsivo */
	@media (max-width: 768px) {
		.sponsors-section {
			padding: 2rem 1rem;
		}

		.sponsor-card {
			padding: 0.625rem 1rem;
			gap: 0.5rem;
		}

		.sponsor-logo {
			font-size: 1.25rem;
		}

		.sponsor-item:hover .sponsor-card {
			transform: translateY(-4px) scale(1.02);
		}
	}
</style>
