---
import Layout from '../layouts/Layout.astro'
import Leaderboard from '../components/Leaderboard.vue'
---

<Layout
	title="Resultados de Clasificación en Vivo"
	description="Resultados de Clasificación en Vivo"
>
	<main class="flex flex-1 justify-center py-8 sm:py-12">
		<div
			class="layout-content-container flex flex-col w-full max-w-7xl flex-1 px-4 sm:px-6 lg:px-8"
		>
			<div class="flex flex-wrap items-center justify-between gap-4 mb-6">
				<div class="flex flex-col gap-2">
					<p
						class="text-gray-900 dark:text-white text-3xl sm:text-4xl font-black leading-tight tracking-[-0.033em]"
					>
						Clasificación en Vivo
					</p>
					<div class="flex items-center gap-2">
						<div class="flex items-center gap-1.5 text-primary">
							<span class="relative flex h-2 w-2">
								<span
									class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"
								></span>
								<span
									class="relative inline-flex rounded-full h-2 w-2 bg-primary"
								></span>
							</span>
							<p class="text-sm font-bold">EN VIVO</p>
						</div>
					</div>
				</div>
			</div>

			<Leaderboard client:load />
		</div>
	</main>
</Layout>
