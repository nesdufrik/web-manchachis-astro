---
import Layout from '../layouts/Layout.astro'

const categories = [
	{
		id: 1,
		name: 'Elite',
		distance: 11,
	},
	{
		id: 2,
		name: 'Master',
		distance: 11,
	},
	{
		id: 3,
		name: 'Champion',
		distance: 11,
	},
	{
		id: 4,
		name: 'Legend',
		distance: 11,
	},
]
---

<Layout
	title="Registro - 8vo Desafío Manchachis"
	description="Registro para el 8vo Desafío Manchachis"
>
	<section class="relative">
		<div
			class="absolute inset-0 bg-cover bg-center"
			style='background-image: linear-gradient(rgba(16, 25, 34, 0.6) 0%, rgba(16, 25, 34, 0.8) 100%), url("/images/image-register-2.webp")'
		>
		</div>
		<div
			class="relative mx-auto max-w-4xl px-4 py-24 text-center text-white sm:py-32"
		>
			<h1
				class="text-4xl font-black leading-tight tracking-tighter sm:text-6xl"
			>
				Inscríbete en la Aventura
			</h1>
			<p class="mt-4 text-lg font-normal text-slate-200 sm:text-xl">
				06 de Diciembre, 2025 - 8vo Desafío Nocturno Manchachis
			</p>
		</div>
	</section>

	<section class="mt-10">
		<div class="container mx-auto max-w-4xl px-4 pb-16">
			<div
				class="rounded-xl border border-slate-200 bg-background-light shadow-lg dark:border-slate-800 dark:bg-background-dark/70 dark:backdrop-blur-sm"
			>
				<form class="p-6 space-y-8">
					<div class="space-y-6">
						<h2 class="text-xl font-bold text-slate-900 dark:text-slate-50">
							Información Personal
						</h2>
						<div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
							<label class="flex flex-col">
								<p
									class="text-sm font-medium pb-2 text-slate-800 dark:text-slate-200"
								>
									Nombre
								</p>
								<input
									class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg border border-slate-300 bg-background-light p-3 text-base text-slate-900 placeholder:text-slate-400 focus:border-primary focus:outline-0 focus:ring-2 focus:ring-primary/20 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-50 dark:placeholder:text-slate-500"
									placeholder="Ingresa tu nombre"
									type="text"
								/>
							</label>
							<label class="flex flex-col">
								<p
									class="text-sm font-medium pb-2 text-slate-800 dark:text-slate-200"
								>
									Apellidos
								</p>
								<input
									class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg border border-slate-300 bg-background-light p-3 text-base text-slate-900 placeholder:text-slate-400 focus:border-primary focus:outline-0 focus:ring-2 focus:ring-primary/20 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-50 dark:placeholder:text-slate-500"
									placeholder="Ingresa tus apellidos"
									type="text"
								/>
							</label>
							<label class="flex flex-col">
								<p
									class="text-sm font-medium pb-2 text-slate-800 dark:text-slate-200"
								>
									Fecha de Nacimiento
								</p>
								<input
									class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg border border-slate-300 bg-background-light p-3 text-base text-slate-900 placeholder:text-slate-400 focus:border-primary focus:outline-0 focus:ring-2 focus:ring-primary/20 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-50 dark:placeholder:text-slate-500"
									type="date"
								/>
							</label>
							<label class="flex flex-col">
								<p
									class="text-sm font-medium pb-2 text-slate-800 dark:text-slate-200"
								>
									Género
								</p>
								<select
									class="form-select flex w-full min-w-0 flex-1 overflow-hidden rounded-lg border border-slate-300 bg-background-light p-3 text-base text-slate-900 focus:border-primary focus:outline-0 focus:ring-2 focus:ring-primary/20 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-50"
								>
									<option>Seleccionar...</option>
									<option>Masculino</option>
									<option>Femenino</option>
									<option>Otro</option>
								</select>
							</label>
						</div>
					</div>

					<div class="space-y-6">
						<h2 class="text-xl font-bold text-slate-900 dark:text-slate-50">
							Información de Contacto
						</h2>
						<div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
							<label class="flex flex-col">
								<p
									class="text-sm font-medium pb-2 text-slate-800 dark:text-slate-200"
								>
									Correo Electrónico
								</p>
								<input
									class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg border border-slate-300 bg-background-light p-3 text-base text-slate-900 placeholder:text-slate-400 focus:border-primary focus:outline-0 focus:ring-2 focus:ring-primary/20 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-50 dark:placeholder:text-slate-500"
									placeholder="tu@email.com"
									type="email"
								/>
							</label>
							<label class="flex flex-col">
								<p
									class="text-sm font-medium pb-2 text-slate-800 dark:text-slate-200"
								>
									Número de Teléfono
								</p>
								<input
									class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg border border-slate-300 bg-background-light p-3 text-base text-slate-900 placeholder:text-slate-400 focus:border-primary focus:outline-0 focus:ring-2 focus:ring-primary/20 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-50 dark:placeholder:text-slate-500"
									placeholder="+1 (555) 123-4567"
									type="tel"
								/>
							</label>
						</div>
					</div>

					<div class="space-y-6">
						<h2 class="text-xl font-bold text-slate-900 dark:text-slate-50">
							Detalles de la Competición
						</h2>
						<div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
							<label class="flex flex-col">
								<p
									class="text-sm font-medium pb-2 text-slate-800 dark:text-slate-200"
								>
									Categoría
								</p>
								<select
									class="form-select flex w-full min-w-0 flex-1 overflow-hidden rounded-lg border border-slate-300 bg-background-light p-3 text-base text-slate-900 focus:border-primary focus:outline-0 focus:ring-2 focus:ring-primary/20 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-50"
								>
									<option>Selecciona una categoría...</option>
									{
										categories?.map((cat) => (
											<option value={cat.id}>
												{cat.name} ({cat.distance}km)
											</option>
										))
									}
								</select>
							</label>
							<label class="flex flex-col">
								<p
									class="text-sm font-medium pb-2 text-slate-800 dark:text-slate-200"
								>
									Talla de Camiseta
								</p>
								<select
									class="form-select flex w-full min-w-0 flex-1 overflow-hidden rounded-lg border border-slate-300 bg-background-light p-3 text-base text-slate-900 focus:border-primary focus:outline-0 focus:ring-2 focus:ring-primary/20 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-50"
								>
									<option>Selecciona una talla...</option>
									<option>S</option>
									<option>M</option>
									<option>L</option>
									<option>XL</option>
								</select>
							</label>
						</div>
					</div>

					<div class="space-y-6">
						<h2 class="text-xl font-bold text-slate-900 dark:text-slate-50">
							Legal y Pago
						</h2>
						<div class="space-y-4">
							<label class="flex items-start gap-3">
								<input
									class="form-checkbox mt-0.5 size-5 rounded border-slate-300 bg-background-light text-primary focus:ring-2 focus:ring-primary/50 dark:border-slate-600 dark:bg-slate-800"
									type="checkbox"
								/>
								<span class="text-sm text-slate-700 dark:text-slate-300"
									>He leído y acepto el reglamento y la exención de
									responsabilidad.</span
								>
							</label>
						</div>
						<div
							class="rounded-lg border border-secondary/20 bg-secondary/10 p-4 dark:bg-secondary/20"
						>
							<div class="flex items-center justify-between">
								<p
									class="text-base font-semibold text-slate-800 dark:text-slate-100"
								>
									Total a Pagar:
								</p>
								<p class="text-2xl font-bold text-secondary">$75.00 USD</p>
							</div>
						</div>
					</div>

					<div class="flex justify-end pt-4">
						<button
							class="flex w-full cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 px-6 bg-primary text-base font-bold text-slate-50 transition-colors duration-200 hover:bg-primary/90 sm:w-auto"
						>
							<span class="truncate">Completar Registro y Pagar</span>
						</button>
					</div>
				</form>
			</div>
		</div>
	</section>
</Layout>
